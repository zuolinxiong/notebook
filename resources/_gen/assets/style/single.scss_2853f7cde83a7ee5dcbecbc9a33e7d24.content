.articleDetailPanel{padding-top:62px}.articleDetailPanel .articleContent{background-color:var(--theme-el-bg-color)}.articleDetailPanel .articleContent .card-img-top{max-height:300px}.articleDetailPanel .articleContent img{width:100%;object-fit:cover;vertical-align:bottom}.articleDetailPanel .articleContent .post-title{border-bottom:1px solid var(--theme-line-color)}.articleDetailPanel .articleContent h2{position:relative;padding:0 0 0 1.5rem;margin:1rem 0}.articleDetailPanel .articleContent h2::before{content:'';position:absolute;left:0;top:50%;width:6px;height:80%;transform:translate(0,-50%);border-radius:10px;background-color:var(--theme-color)}.articleDetailPanel .articleContent h3{font-size:1.5rem}.articleDetailPanel .articleContent blockquote{margin-top:1rem;border-left:.2rem solid var(--theme-color);padding:1rem;background-color:var(--theme-line-color)}.articleDetailPanel .articleContent blockquote p{margin:0!important}.articleDetailPanel .articleContent .videoContainer{width:100%}.articleDetailPanel .articleContent .videoContainer iframe{width:100%;min-height:30rem}.articleDetailPanel .tableOfContent{padding:1rem;background-color:var(--theme-el-bg-color)}.articleDetailPanel .tableOfContent .title{padding-left:1rem;position:relative}.articleDetailPanel .tableOfContent .title::before{content:'';position:absolute;left:0;top:50%;width:6px;height:80%;transform:translate(0,-50%);border-radius:10px;background-color:var(--theme-color)}.articleDetailPanel .tableOfContent ul{padding-left:1.2rem}.articleDetailPanel .tableOfContent a{font-size:1rem;color:var(--theme-gray-color);text-decoration:none}.articleDetailPanel .tableOfContent a:hover{text-decoration:underline}.articleDetailPanel .prevPost{background-color:var(--theme-el-bg-color);position:relative;border-radius:3px;overflow:hidden;cursor:pointer}.articleDetailPanel .prevPost::after{content:'';display:block}.articleDetailPanel .prevPost .nextImg{position:absolute;left:0;top:0;width:100%;height:100%;z-index:1;transition:all .3s ease}.articleDetailPanel .prevPost .nextTitle{position:relative;z-index:10;height:50px;color:var(--theme-el-bg-color)}.articleDetailPanel .prevPost .meta-info{position:relative;z-index:5;color:var(--theme-el-bg-color)}.articleDetailPanel .prevPost:hover .nextImg{transform:scale(1.2)}